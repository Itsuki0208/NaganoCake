<main>
  <div class='row'>
    <div class="col-md-3">
      <h2 class = "mt-3">配送先登録</h2>
      <%= form_with model:@address, url:public_addresses_path, local:true do |f| %>
        <div class='form-group'>
          <label for="address-name">氏名</label>
          <%= f.text_field:name, class: "form-control address_name" %>
        </div>
        <div class='form-group'>
          <label for="postal_code">郵便番号</label>
          <%= f.text_field:postal_code, class: "form-control postal_code" %>
        </div>
        <div class='form-group'>
          <label for="address">住所</label>
          <%= f.text_field:address, class: "form-control address" %>
        </div>
        <div class= "form-group">
          <%= f.submit '住所登録', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">配達一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>氏名</th>
            <th>郵便番号</th>
            <th>住所</th>
            <th colspan="5"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.name%></td>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= link_to '編集', edit_public_address_path(address.id), class: "btn btn-success" %></td>
              <td><%= link_to '削除',  public_address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn-sm btn-danger"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</main>