<main>
  <div class='container'>
    <div class='row'>
    	<div class='mt-3'>
    		<h4>商品検索</h4>
	      <%= search_form_for @search, url:public_items_path do |f|%>
	        <%= f.search_field :name_cont %>
	        <div class="actions"><%= f.submit "検索" %></div>
	      <% end %>
	    </div>  
      <h3 class= 'mt-3 fas fa-cookie-bite'>商品一覧(全<%= @items.count %>件)</h3>
      <div class="col-xs-9 col-xs-offset-1">
		    <div class="product-card-content">
		    	<div class="mt-3">
			      <% @items.each do |item| %>
			        <div class="col-xs-3" style="padding-right: 0px; padding-left: 0px; margin: 10px 0;">
				        <%= link_to public_item_path(item.id) do %><br>
					        <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg" %><br>
					      <% end %>  
					        <%= item.name %>
					        <%= (item.price*1.1).floor %> <!-- 税込計算式/.floor => 浮動小数点数の切り捨てを行うためFloatクラスのfloorメソッドを使用 -->
			        </div>
			      <% end %>
			    </div>
		    </div>
	    </div>
    </div>
  </div>
</main>