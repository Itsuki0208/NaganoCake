<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>ジャンル名編集</h1>
        <%= form_with model:@genre, url:admin_genre_path, local:true do |f|%>
          <div class="form-group">
            <label for = "genre_name">ジャンル名</label>
            <%= f.text_field:name, class: "form-control genre_name" %>
          </div>
          <div class="form-group">
              <%= f.submit "ジャンル名編集", class: "btn btn-success"%>
            </div>  
        <% end %>
        
        <%= link_to "ジャンル一覧へ", admin_genres_path %>
      </div>
    </div>
  </div>
</main>