<div class="row">
      <h2>商品詳細</h2>
      <table class="table">
        <thead>
          <tr>
            <th>NAME</th>
            <th>商品写真</th>
            <th>商品説明</th>
            <th>税抜価格</th>
            <th>販売ステータス</th>
            <th>編集</th>
          </tr>
        </thead>
        <tbody>

          <tr class="table-active">
            <td><%= @item.name %></td>
            <td><%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg' %></td>
            <td><%= @item.introduction%></td>
            <td><%= @item.price%></td>
            <td><% if @item.sales_status == false %>
            販売中
            <% else %>
            販売休止/売り切れ
            <% end %>
            </td>
            <td><%= link_to '編集ボタン', edit_admin_item_path %></td>
          </tr>

        </tbody>
      </table>
</div>