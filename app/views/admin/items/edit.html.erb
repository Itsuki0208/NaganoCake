<div class='container'>
  <h2 class="edit-title">商品編集</h2>
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <%= form_with model:@item, url: admin_items_path, local:true do |f|%>
          <div class="form-group">
            <label for="admin-name">Name</label>
            <%= f.text_field :name, class: "form-control name" %>
          </div>
          <div class="form-group">
            <label for="admin-image">商品写真</label>
            <%= f.attachment_field :image, class: "form-control-file item_image" %>
          </div>
          <div class="form-group">
            <label for="admin-introduction">商品説明</label>
            <%= f.text_area :introduction,  class: "form-control introduction" %>
          </div>
          <div class="form-group">
            <label for="price">税抜き価格</label>
            <%= f.text_area :price, class: "form-control introduction" %>
          </div>
          <div class="form-group">
            <%= f.submit"Update User", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
</div>