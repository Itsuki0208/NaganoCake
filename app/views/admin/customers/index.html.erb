<div class="row">
  <div class="col-md-8 offset-md-1">
    <h2>Customer information</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員id</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>退会ステータス</th>
              <th colspan="5"></th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer|%>
              <tr>
                <td><%= customer.id%></td>
                <td><%= link_to admin_customer_path(customer.id) do %> <%= customer.last_name %> <%= customer.first_name %><% end %></td>
                <td><%= customer.telephone_number %></td>
                <td><%= customer.email%></td>
                <!--<td> customer.withdrwal_active %></td>-->
              </tr>
            <% end %>  
          </tbody>
        </table>
      </div>
    </div>