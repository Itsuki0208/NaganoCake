<div class="container">
  <h2>新規登録</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
  
    <div class="row">
      <div class="form-group">
        <label for="name">氏名</label><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"姓" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"名" %>
      </div>
    </div>
  
    <div class="row">
      <div class="form-group">
        <label for="name_kana">フリガナ</label><br />
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder:"セイ" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder:"メイ" %>
      </div>
    </div>
  
    <div class="row">
      <div class="form-group">
        <label for="email">メールアドレス</label><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
     
    <div class="row">
      <div class="form-group">
        <label for="postal-code">郵便番号</label><br />
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder:"ハイフンなし" %>
      </div>
      </div>
      
      <div class="row">
        <div class="form-group">
          <label for="address">住所</label><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
      </div>
      
      <div class="row">
        <div class="form-group">
          <label for="telephone_number">電話番号</label><br />
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder:"ハイフンなし" %>
        </div>
      </div>
      
     
      <div class="row">
        <div class="form-group">
          <label for="password">パスワード</label>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>
  
      <div class="row">
        <div class="form-group">
          <label for="password_confirmation">パスワード（確認用）</label><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
    
      <div class="row">
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      </div>
      
  <% end %>
  
    <div class="row">
      <div class="form-group">
        <span>既に登録済みの方</soan>
        <%= link_to "こちら", new_customer_session_path %><span>からログインしてください。</span>  
      </div>  
    </div>
</div>